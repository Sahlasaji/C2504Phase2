<Window x:Class="CounterProject.DisplayCounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="DisplayCounterWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <TextBox Text="{Binding NewCounter}" x:Name="txtCounter" HorizontalAlignment="Left" Margin="211,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button  Command="{Binding PlusCommand}" x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="149,217,0,0" VerticalAlignment="Top" Width="56"/>
        <Button Command="{Binding MinusCommand}" x:Name="btnMinus" Content="-" HorizontalAlignment="Left" Margin="323,217,0,0" VerticalAlignment="Top" Width="63"/>

    </Grid>
</Window>
