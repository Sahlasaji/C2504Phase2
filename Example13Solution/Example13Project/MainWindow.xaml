<Window x:Class="Example13Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Border Canvas.Left="300" Canvas.Top="100" BorderBrush="Silver" Background="PaleGoldenrod" BorderThickness="1" CornerRadius="5" >
            <TextBlock x:Name="lblCount" TextAlignment="Center" FontSize="22" Height="50" Width="200" Text="0"/>
        </Border>
        <Button x:Name="btnPlus" Content="+" FontSize="32" FontWeight="Bold" Canvas.Left="300" Canvas.Top="160" Width="80" Height="80" Click="btnPlus_Click_1"/>
        <Button x:Name="btnMinus" Content="-" Canvas.Left="422" Canvas.Top="160" Width="80" Height="80" FontSize="32" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnMinus_Click"/>
    </Canvas>
</Window>
