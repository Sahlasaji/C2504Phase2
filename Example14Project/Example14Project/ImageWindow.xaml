<Window x:Class="Example14Project.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Project"
        mc:Ignorable="d"
        Title="Image Brush" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="297" Canvas.Left="102" Stroke="Black" Canvas.Top="91" Width="373" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush  ImageSource="/peacock.jpg" Opacity="0.5" Stretch="UniformToFill" TileMode="FlipXY" AlignmentX="Center"/>
            </Rectangle.Fill>
        </Rectangle>
        <Ellipse Height="140" Canvas.Left="521" Stroke="Black" Canvas.Top="99" Width="154" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Pattern1.png" Opacity="0.99"/>
            </Ellipse.Fill>

        </Ellipse>

    </Canvas>
</Window>
